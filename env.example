# Rails Master Key (required for Rails 6+)
# Copy from config/master.key or generate a new one
RAILS_MASTER_KEY=your_rails_master_key_here

# Database Configuration (Remote - using existing config/database.yml)
# The application will use the remote database configuration from database.yml
# DATABASE_HOST=devtestdatabase.contalink.com
# DATABASE_NAME=testinvoices
# DATABASE_USERNAME=developer
# DATABASE_PASSWORD=UQpaA9TA

# Redis Configuration
# Development: Local Docker Redis
# Production: Railway Redis
REDIS_URL=redis://redis:6379/0
RAILWAY_REDIS_URL=redis://your-railway-redis-url:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Optional: Sidekiq Configuration
# SIDEKIQ_CONCURRENCY=5
